<%- include("partials/header") %>
<%- include("partials/nav",{isSignedIn,userId}) %>
 <% if(messages.error){%>
<div class="container alert alert-danger text-center">
  <%= messages.error %>
</div>
<%}%>
<% if(messages.success){%>
<div class="container alert alert-success text-center">
  <%= messages.success %>
</div>
<%}%>
<div class="container text-center">
  <h1>SignIn Form</h1>

  <form action="/login" method="POST" class="text-center">
    <div class="form-group mx-auto" style="width: 30vw">
      <input
        class="form-control"
        type="email"
        name="email"
        placeholder="Enter Email"
        required
      />
    </div>
    <div class="form-group mx-auto" style="width: 30vw">
      <input
        class="form-control"
        type="text"
        name="username"
        placeholder="Enter Username"
        required
      />
    </div>
    <div class="form-group mx-auto" style="width: 30vw">
      <input
        class="form-control"
        type="password"
        name="password"
        placeholder="Enter Password"
        required
      />
    </div>
    <div class="form-group ">
      <button class="btn btn-primary" style="width: 30vw" type="submit">
        Sign Up
      </button>
    </div>
  </form>
  <a href="/register" class="btn btn-link mb-2 text-danger"
    >Click to Register!!</a
  >
</div>

<%- include("partials/footer") %>
